                                       <children>
                                          <Label styleClass="label-product-image" text="ADD ITEM">
                                             <font>
                                                <Font name="System Bold" size="12.0" />
                                             </font>
                                          </Label>
                                       </children>
                                       <padding>
                                          <Insets left="10.0" />
                                       </padding>
                                    </HBox>
                                 </top>
                                 <right>
                                                <VBox alignment="CENTER" prefHeight="449.0" prefWidth="278.0" styleClass="left-panel" BorderPane.alignment="CENTER">
