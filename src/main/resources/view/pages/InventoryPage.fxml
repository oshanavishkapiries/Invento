                                <TextField onKeyTyped="#search_onchange" promptText="Search" styleClass="text-field" />
                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../assets/icons/search.png" />
